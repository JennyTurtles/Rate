<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sys.rate.mapper.PaperMapper">

    <resultMap type="org.sys.rate.model.Paper" id="PaperResult">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="studentId" column="student_id"/>
        <result property="name" column="name"/>
        <result property="date" column="date"/>
        <result property="author" column="author"/>
        <result property="publicationId" column="publication_id"/>
        <result property="url" column="url"/>
        <result property="state" column="state"/>
        <result property="pubPage" column="pubPage"/>
        <result property="publicationId" column="publication_id"/>
        <collection property="operationList" ofType="org.sys.rate.model.Operation">
            <result property="operatorRole" column="operator_role"/>
            <result property="operatorId" column="operator_id"/>
            <result property="operatorName" column="operator_name"/>
            <result property="prodType" column="prod_type"/>
            <result property="prodId" column="prod_id"/>
            <result property="date" column="operation_date"/>
            <result property="operationName" column="operation_name"/>
            <result property="state" column="operation_state"/>
            <result property="remark" column="operation_remark"/>
        </collection>
    </resultMap>

    <sql id="selectPaperVo">
        select id,
               name,
               student_id,
               date,
               author,
               state,
               url,
               have_score,
               pub_page,
               publication_id
        from i_paper
    </sql>

    <select id="getById" resultMap="PaperResult">
        SELECT
            p.id, p.name, p.student_id, p.date, p.author, p.state, p.url,
            p.have_score, p.pub_page, p.publication_id,
            o.operator_role, o.operator_id, o.operator_name,
            o.prod_type, o.prod_id, o.date AS operation_date, o.operation_name, o.state AS operation_state, o.remark AS operation_remark
        FROM i_paper p
                 LEFT JOIN i_oper o ON p.id = o.prod_id AND o.prod_type = '学术论文'
        WHERE p.id = #{id}
    </select>

    <insert id="insertPaper" parameterType="org.sys.rate.model.Paper" useGeneratedKeys="true" keyProperty="id">
        insert into i_paper
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="studentId != null">student_id,</if>
            <if test="date != null">date</if>
            <if test="author != null">author,</if>
            <if test="state != null">state,</if>
            <if test="url != null">url,</if>
            <if test="haveScore != null">have_score,</if>
            <if test="pubPage != null">pub_page</if>
            <if test="publicationId != null">publication_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="studentId != null">#{studentId},</if>
            <if test="date != null">#{date}</if>
            <if test="author != null">#{author},</if>
            <if test="state != null">#{state},</if>
            <if test="url != null">#{url},</if>
            <if test="haveScore != null">#{haveScore}</if>
            <if test="pubPage != null">#{pubPage}</if>
            <if test="publicationId != null">#{publicationId},</if>
        </trim>
    </insert>

    <update id="updatePaper" parameterType="org.sys.rate.model.Paper">
        update i_paper
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="studentID != null">student_id = #{studentID},</if>
            <if test="date != null">date = #{date},</if>
            <if test="author != null">author = #{author},</if>
            <if test="state != null">state=#{state},</if>
            <if test="url != null">url=#{url},</if>
            <if test="haveScore != null">have_score=#{haveScore}</if>
            <if test="pubPage != null">pub_page=#{pubPage},</if>
            <if test="publicationID != null">publication_id = #{publicationId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePaperByIds">
        delete from i_paper where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="editState" parameterType="org.sys.rate.model.Paper">
        update i_paper
        <set>
            <if test="state != null and state != '' ">state=#{state}</if>
        </set>
        where id = #{id}
    </update>


    <select id="selectListByIdWithPaging" resultMap="PaperResult">
        <include refid="selectPaperVo"></include>
        <where>
            <if test="studentID != null  and studentID != ''">and studentID = #{studentID}</if>
            <if test="page !=null and size!=null">
                limit #{page},#{size}
            </if>
        </where>
    </select>


</mapper>
